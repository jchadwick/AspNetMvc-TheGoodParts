@model Website.Models.AuctionViewModel
@{
    ViewBag.Title = Model.Title;
}

<style>
    .auction-details p {
        margin: 0;
    }
    .row-fluid .auction-details [class*="span"] {
        min-height: 24px;
    }

    .auction-details label {
        text-align: right;
        padding-right: 5px;
    }
</style>


<div class="auction-info row-fluid">
    
    <div class="span4">
        <p>&nbsp;</p>
        <img class="img-polaroid" src="@Model.ImageUrl" />
    </div>
    
    <div class="span8">
        
        <h3 class="title">@Model.Title</h3>
        
        <div class="auction-details row-fluid">
            
            <div class="span8">
                <p class="clearfix">
                    <label class="span3 muted">Condition:</label>
                    <span class="condition">@Model.Condition</span>
                </p>

                <p class="clearfix">
                    <label class="span3 muted">Time left:</label>
                    <span class="ends-in">@Model.EndsIn</span>
                    <small class="muted">(@Model.EndTime)</small>
                </p>
            
                <div class="well well-small">
                    <p class="clearfix">
                        <label class="span3 muted">
                            @(Model.HasBids ? "Current" : "Starting") Bid:
                        </label>
                        <span class="current-price">@Model.CurrentPriceDisplay</span>
                        <span class="pull-right">[@Html.ActionLink("Bid History", "History", "Auctions", new { id = Model.Id })]</span>
                    </p>
                    

                    @using(Html.BeginForm("Bid", "Auctions", FormMethod.Post)) {
                    <p class="clearfix">
                        <label class="span3 muted">&nbsp;</label>
                        <span class="input-prepend span5">
                            <span class="add-on">$</span>
                            <input name="amount" type="text" class="input-small" value="@Model.MinimumBidDisplay">
                        </span>
                        <input type="submit" value="Place Bid" class="btn btn-primary"/>
                    </p>
                }
                </div>
            </div>

            <div class="well  well-small span4">
                <h5>Seller Information</h5>
                @Html.ActionLink(Model.SellerUsername ?? " ", "Seller", "Auctions", new { id = Model.Id })
            </div>

        </div>

    </div>

</div>

<div class="row-fluid">
    <h4>Description</h4>
    <section class="description">
        @Model.Description
    </section>
</div>