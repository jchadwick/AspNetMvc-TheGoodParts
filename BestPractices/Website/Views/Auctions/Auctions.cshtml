@model Website.Models.AuctionsViewModel

@{
    ViewBag.Title = "Auctions";
}

<table class="auctions table table-hover table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Current Price</th>
            <th>Ends In</th>
        </tr>
    </thead>

    @foreach (var auction in Model.Auctions)
    {
        <tr class="auction" data-id="@auction.Id">
            <td>
                <img class="img-polaroid" src="@auction.ThumbnailUrl" />
                <span class="title">
                    @Html.ActionLink(auction.Title, "Details", "Auctions", new { id = auction.Id })
                </span>
            </td>
            <td>
                <span class="price">@auction.CurrentPriceDisplay</span>
            </td>
            <td>
                <span class="ends-in @(auction.EndsToday ? "text-warning" : "")" title="@auction.EndTime">
                    @auction.EndsIn
                </span>
            </td>
        </tr>
    }
</table>
