@using Common
@using Website.Models
<div class="navbar navbar-static-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">MVC Auctions</a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                @foreach(Category category in ViewBag.Categories)
                {
                    <li>@Html.ActionLink(category.Name, "Categories", "Auctions", new { id = category.Key }, null)</li>
                }
                </ul>
            </div>
            <div class="pull-right">
                <form action="@Url.Action("Index", "Auctions")" method="GET" class="navbar-search form-inline">
                    <input name="query" type="text" class="search-query" placeholder="Search">
                    <a href="#">Sign in</a>
                </form>
            </div>
        </div>
    </div>
</div>
